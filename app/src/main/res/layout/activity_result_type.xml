<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Toolbar
        android:id="@+id/result_type_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/colorPrimary">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/result_type_button_close"
                android:layout_width="@dimen/toolbar_button_width"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:background="@drawable/button_click"
                android:src="@drawable/ic_close_white_24dp"
                android:contentDescription="@string/button_close" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/title_text_size"
                android:text="@string/result_type_title" />

        </RelativeLayout>
    </Toolbar>

    <TextView
        android:id="@+id/result_type_show_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/result_type_toolbar"
        android:layout_margin="@dimen/normal_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/title_text_size"
        android:gravity="center"/>
</RelativeLayout>