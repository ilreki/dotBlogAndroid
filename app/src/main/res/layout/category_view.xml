<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/category_column_height_width"
    android:layout_height="@dimen/category_column_height_width"
    android:clickable="true"
    android:gravity="center">

    <ImageView
        android:id="@+id/category_view_icon"
        android:layout_width="@dimen/category_icon_height_width"
        android:layout_height="@dimen/category_icon_height_width" />

    <TextView
        android:id="@+id/category_view_name"
        android:layout_width="@dimen/category_icon_height_width"
        android:layout_height="@dimen/category_icon_height_width"
        android:gravity="center"
        android:layout_below="@id/category_view_icon"/>
</RelativeLayout>